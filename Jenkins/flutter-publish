pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build APK') {
            steps {
                script {
                    dir('akvt_raspisanie') {
                        sh 'docker run --rm -v $PWD:/app -w /app instrumentisto/flutter bash -c \'flutter pub get; flutter pub run build_runner build; flutter build apk --release\''
                    }
                }
            }
        }
        stage('Send APK to Telegram') {
            agent {
                docker {
                    // Используем Docker образ с Python для отправки
                    image 'python:3.9-slim'
                    // Монтируем директории с APK и скриптом в контейнер
                    args '-v $PWD/akvt_raspisanie/build/app/outputs/flutter-apk:/apk -v $PWD/Jenkins:/app'
                }
            }
            steps {
                // Запускаем скрипт Python в контейнере Docker для отправки APK в Telegram
                script {
                    sh 'chmod +x /app/publish.py'
                    sh 'python /app/publish.py /apk/*.apk'
                }
            }
        }
    }
    post {
        always {
            archiveArtifacts artifacts: '**/build/app/outputs/flutter-apk/*.apk', fingerprint: true
        }
    }
}
