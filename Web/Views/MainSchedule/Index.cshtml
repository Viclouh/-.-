@model IEnumerable<Speciality>
@{
	ViewData["Title"] = "Main Schedule";
}
<div class="vh-100">
	<div class="navbar container-fluid">
		<select class="form-select container-fluid" style="width:auto;">
			<option selected disabled hidden>Специальность</option>
			<option>Все</option>
			@foreach(Speciality speciality in Model)
			{
				<option>@speciality.Name</option>
			}
		</select>
	</div>
	<div>
		@Html.Partial("Schedule")
	</div>
</div>




























